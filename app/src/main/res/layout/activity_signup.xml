<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mobile_login_bro" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="14dp"
            >
            <TextView
                android:id="@+id/tv_firstText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_signup"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tv_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_firstText"
                android:text="@string/restaurant_title"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <!-- Common input fields -->
            <EditText
                android:id="@+id/full_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_second"
                android:hint="@string/full_name_hint"
                android:inputType="textPersonName"
                android:background="@drawable/borders"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="Smith" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/full_name_input"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:background="@drawable/borders"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="abc@email.com" />

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_below="@id/email_input"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/address_input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="@string/address"
                    android:background="@drawable/borders"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:autofillHints="xyz road" />

                <EditText
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/borders"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:inputType="text"
                    android:autofillHints="" />

                <ListView
                    android:id="@+id/suggestions_list_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="NestedScrolling" />

            </LinearLayout>
            <EditText
                android:id="@+id/phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_layout"
                android:hint="@string/phone_hint"
                android:background="@drawable/borders"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:autofillHints="1234567890" />

            <LinearLayout
                android:id="@+id/input_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_input"
                android:orientation="horizontal">

                <!-- Admin input fields-->
                <LinearLayout
                    android:id="@+id/admin_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/admin_designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borders"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/designation"
                        android:autofillHints=""
                        android:inputType="text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/select_access_level"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borders"
                        android:textAlignment="center">

                        <RadioGroup
                            android:id="@+id/access_level_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_full_access"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/full_access"
                                />
                            <RadioButton
                                android:id="@+id/radio_restricted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/restricted_access"
                                />
                        </RadioGroup>
                    </HorizontalScrollView>
                </LinearLayout>

                <!-- Restaurant input fields -->
                <LinearLayout
                    android:id="@+id/restaurant_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/restaurant_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/restaurant_name_hint"
                        android:background="@drawable/borders"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:autofillHints="" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/Cuisine"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                        <RadioGroup
                            android:id="@+id/res_cuisine_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_res_chinese"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/chinese"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_italian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/italian"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_maxican"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/mexican"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_indian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/indian"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_japanese"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/japanese"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/food_type"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                        <RadioGroup
                            android:id="@+id/res_food_type_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_res_perishable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/perishable"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_nonperishable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/non_perishable"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_cooked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/cooked_meals"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_leftover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/leftover_food"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_bakery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/bakery_items"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/ngo_pickup_time"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                        <RadioGroup
                            android:id="@+id/res_food_pickup_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_res_anytime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/anytime"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_morning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/morning"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_afternoon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/afternoon"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_evening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/evening"
                                />
                            <RadioButton
                                android:id="@+id/radio_res_night"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/night"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>

                </LinearLayout>

                <!-- NGO input fields -->
                <LinearLayout
                    android:id="@+id/ngo_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/ngo_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ngo_name_hint"
                        android:background="@drawable/borders"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:autofillHints="" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/ngo_Donation_type"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                        <RadioGroup
                            android:id="@+id/ngo_food_type_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_perishable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/perishable"
                                />
                            <RadioButton
                                android:id="@+id/radio_nonperishable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/non_perishable"
                                />
                            <RadioButton
                                android:id="@+id/radio_cooked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/cooked_meals"
                                />
                            <RadioButton
                                android:id="@+id/radio_leftover"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/leftover_food"
                                />
                            <RadioButton
                                android:id="@+id/radio_bakery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/bakery_items"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/ngo_organization_type"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borders"
                        android:textAlignment="center">

                    <RadioGroup
                        android:id="@+id/ngo_organization_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_non_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/non_profit"
                            />
                        <RadioButton
                            android:id="@+id/radio_community"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/community"
                            />
                        <RadioButton
                            android:id="@+id/faith_based"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/faith_based"
                            />
                        <RadioButton
                            android:id="@+id/radio_government"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/government"
                            />
                        <RadioButton
                            android:id="@+id/radio_international"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/international"
                            />

                    </RadioGroup>
                    </HorizontalScrollView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/food_pickup"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders"
                        >

                        <RadioGroup
                            android:id="@+id/ngo_food_pickup_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_anytime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/anytime"
                                />
                            <RadioButton
                                android:id="@+id/radio_morning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/morning"
                                />
                            <RadioButton
                                android:id="@+id/radio_afternoon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/afternoon"
                                />
                            <RadioButton
                                android:id="@+id/radio_evening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/evening"
                                />
                            <RadioButton
                                android:id="@+id/radio_night"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:text="@string/night"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>
                    <EditText
                        android:id="@+id/ngo_registration_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:background="@drawable/borders"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:hint="@string/ngo_s_tax_id_or_registration_number"
                        android:autofillHints=""
                        android:inputType="text" />

                </LinearLayout>

                <!-- Receiver input fields -->
                <LinearLayout
                    android:id="@+id/receiver_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/rev_pickup_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ngo_pickup_time"
                        android:background="@drawable/borders"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:autofillHints="" />

                </LinearLayout>

                <!-- Volunteer input fields -->
                <LinearLayout
                    android:id="@+id/volunteer_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/vol_availability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/availability"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                    <RadioGroup
                        android:id="@+id/vol_availability_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="TooManyViews">

                        <RadioButton
                            android:id="@+id/radio_weekdays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/weekdays_monday_friday"
                            />
                        <RadioButton
                            android:id="@+id/radio_weekends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/weekends_saturday_sunday"
                            />
                        <RadioButton
                            android:id="@+id/radio_vol_evening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/evenings_5pm_8pm"
                            />
                        <RadioButton
                            android:id="@+id/radio_vol_morning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/mornings_9am_12pm"
                            />
                        <RadioButton
                            android:id="@+id/radio_vol_afternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/afternoons_1pm_4pm"
                            />
                        <RadioButton
                            android:id="@+id/radio_flexible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="8dp"
                            android:text="@string/flexible"
                            />

                    </RadioGroup>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/vol_pref"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/preferred_type_of_volunteering_opportunity"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/borders">

                        <RadioGroup
                            android:id="@+id/vol_pref_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_event"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/event_setup_and_cleanup"
                                />
                            <RadioButton
                                android:id="@+id/radio_food_prep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/food_preparation_and_cooking"
                                />
                            <RadioButton
                                android:id="@+id/radio_serving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/serving_food_and_drinks"
                                />
                            <RadioButton
                                android:id="@+id/radio_donation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/donation_sorting_and_packaging"
                                />
                            <RadioButton
                                android:id="@+id/radio_fundraising"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/fundraising_and_outreach"
                                />
                            <RadioButton
                                android:id="@+id/radio_driving"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="8dp"
                                android:text="@string/driving_and_transportation"
                                />

                        </RadioGroup>
                    </HorizontalScrollView>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_fields"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:background="@drawable/borders"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="23sd234s" />

            <EditText
                android:id="@+id/confirm_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_input"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"
                android:background="@drawable/borders"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints="23sd234s" />

            <!-- Sign up button -->
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_password_input"
                android:text="@string/signup_button"
                android:padding="8dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_margin="14dp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>