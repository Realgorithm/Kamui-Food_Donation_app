<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant.RAddRequest"
    android:orientation="vertical"
    android:paddingTop="12dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prepration Time*"
        />

    <TextView
        android:id="@+id/tv_food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginVertical="8dp"
        android:text="Food Items"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:inputType="text"
        android:hint="Food Items"
        android:autofillHints="" />

    <TextView
        android:id="@+id/tv_feed_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Feed Count"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_feed_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:inputType="number"
        android:hint="Feed Count"
        android:autofillHints=""/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:layout_margin="16dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:backgroundTint="@color/yellow_200"
        android:text="Submit" />

</LinearLayout>